@using People.MvcUi.Models
@model PersonCreateModel
@{
	Layout = "_Layout";
	ViewData["Title"] = "Create Page";
}

<div class="container">
	<h1>Add New Person</h1>
	<section>
		<form id="person-form" asp-controller="Home" asp-action="Create" method="post">
			@Html.AntiForgeryToken()
			<fieldset>
				<div class="row">
					<div class="form-group">
						<label class="form-label" asp-for="Name.FirstName">First Name</label>
						<input class="form-control form-text" type="text" name="Name.FirstName" value="" required />
					</div>
				</div>
				<div class="row">
					<div class="form-group">
						<label class="form-label" asp-for="Name.LastName">Last Name</label>
						<input class="form-control form-text" type="text" name="Name.LastName" value="" required />
					</div>
				</div>
			</fieldset>
			<fieldset>
				<div class="row">
					<div class="form-group">
						<label class="form-label" asp-for="Contact.Phone">Phone</label>
						<input class="form-control form-text" type="tel" name="Contact.Phone" value="" required />
					</div>
				</div>
				<div class="row">
					<div class="form-group">
						<label class="form-label" asp-for="Contact.Address">Address</label>
						<input class="form-control form-text" type="text" name="Contact.Address" value="" required />
					</div>
				</div>
				<div class="row">
					<div class="form-group">
						<label class="form-label" asp-for="Contact.Email">Email</label>
						<input class="form-control" type="email" name="Contact.Email" value="" required />
					</div>
				</div>
			</fieldset>
			<div class="row">
				<div class="form-group">
					<div class="d-grid col-8 mx-auto p-2">
						<input id="submit-added-person" type="submit" class="btn btn-success" />
					</div>
				</div>
			</div>
		</form>
	</section>
</div>
